@if (Model.Proyectos is not null)
{
        <div class="text-center p-2 mt-5">
            <h1>Mis trabajos recientes</h1>
            <p>Aqui puedes ver algunos de mis trabajos recientes.</p>
        </div>

       <div class="container">
           <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model.Proyectos)
            {
                       <div class="col">
                           <div class="card h-100">
                               <img src="@proyecto.ImagenURL" class="card-img-top" alt="imagen proyecto"/>
                               <div class="card-body">
                                   <h5 class="card-title">@proyecto.Titulo</h5>
                                   <p class="card-text">@proyecto.Descripcion</p>
                                   <div class="card-footer">
                                       <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noreferrer">Visitar</a>
                                   </div>
                               </div>
                           </div>
                       </div>
            }
           </div>
       </div>

}