@model IEnumerable<Persona>
@{
    ViewData["Title"] = "Tabla personas";
}

<div class="container">
    <h1 class="mb-3">Personas</h1>
    @if(Model is null){
        <h5>Aún no hay personas en la tabla</h5>
        <a asp-action="Agregar" class="btn btn-success mb-3">Agregar</a>
    }else{
        <a asp-action="Agregar" class="btn btn-success mb-3">Agregar</a>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in Model)
                {
                        <tr>
                            <td>@persona.Id</td>
                            <td>@persona.Nombre</td>
                            <td>@persona.Apellido</td>
                            <td><a asp-action="Eliminar" asp-route-id="@persona.Id"><i class="bi bi-trash" style="color:red"></i></a></td>
                        </tr>
                }
            </tbody>
        </table>
    }
</div>
